<h3>Регистрация</h3>
<%= form_for :user, @user, :url => users_path, :html => { :multipart => true } do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h4>Ворнинг:</h4>
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <p>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%=  label(:user, :confirm, "Строка для проверки") %><br />
    <%=  text_field(:user, :confirm) %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>