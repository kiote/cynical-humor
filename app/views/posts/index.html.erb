<h2>Listing posts</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.user %></td>
    <td><% if auth? %><%= link_to 'Show', post %><% end %></td>
    <td><% if auth? %><%= link_to 'Edit', edit_post_path(post) %><% end %></td>
    <td><% if auth? %><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if auth? %><%= link_to 'New Post', new_post_path %><% end %>
